<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
    <body>
        <section class="gradient-form" style="background-color: #eee;">
            <div class="container hv-100">
                <div class="row justify-content-center hv-100 py-5">
                    <div class="col-12 col-sm-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                        <div class="card rounded-3 text-black">
                            <div class="card-body p-5">
                                <div class="text-center mb-4">
                                    <img src="https://cdn-icons-png.flaticon.com/512/8234/8234412.png"
                                        style="width: 100px;">
                                </div>
                                <form method="post" action="/register">
                            <h3 class="text-center mb-4 pb-2 border-bottom border-primary text-nonbreak">
                                Create Account</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-outline mb-3 ">
                                        <label for="inputFirstName"
                                            class="form-label text-nonbreak"><b>Username</b></label>
                                        <input class="form-control" id="inputFirstName" type="text"
                                            placeholder="Enter your first name" name="name" value="<%= preserveInputs.name || '' %>"/>
                                    </div>
                                </div>

                            </div>
                            <div class="form-outline mb-3">
                                <label for="inputEmail" class="form-label text-nonbreak"><b>Email
                                        address</b></label>
                                <input class="form-control" id="inputEmail" type="email"
                                    placeholder="name@example.com" name="email" value="<%= preserveInputs.email || '' %>" />
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-outline mb-3 ">
                                        <label for="inputPassword"
                                            class="form-label text-nonbreak"><b>Password</b></label>
                                        <input class="form-control" id="inputPassword" type="password"
                                            placeholder="Create a password" name="password" value="<%= preserveInputs.password || '' %>"/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-outline mb-3 ">
                                        <label for="inputPasswordConfirm" class="form-label text-nonbreak"><b>Confirm
                                                Password</b></label>
                                        <input class="form-control" id="inputPasswordConfirm" type="password" name="confirmPassword"
                                            placeholder="Confirm password" value="<%= preserveInputs.confirmPassword || '' %>" />
                                    </div>
                                </div>
                            </div>
                           
                            <% if (typeof error !== "undefined" && error != '') { %>
                                <div id="error" class="alert alert-danger" role="alert">
                                    <span class="font-weight-bold"><%= error %></span>
                                </div>
                            <% } %>
                            <div class="mb-0">
                                <div class="d-grid"><button class="btn btn-primary btn-block" type="submit">Create
                                        Account</button></div>
                            </div>
                        </form>
                                <div class="text-center mt-4">
                                    <div class="small"><a href="/login">Have an account? Go to login</a></div>

                                </div>
                            </div>


                        </div>
                    </div>
                </div>

            </div>
        </section>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
    </section>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script>
        $("#error").delay(2000).slideUp(500);
    </script>

</html>